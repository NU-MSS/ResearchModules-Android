<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="back_button_width">32dp</dimen>
    <dimen name="cancel_button_width">32dp</dimen>
    <dimen name="icon_width">68dp</dimen>
    <dimen name="info_button_width">32dp</dimen>
    <id name="leftTappingButton"/>
    <id name="rightTappingButton"/>
    <id name="study_burst_progress_bar_day"/>
    <id name="study_burst_progress_bar_day_count"/>
    <id name="study_burst_progress_bar_dial"/>
    <id name="study_burst_progress_bar_text"/>
    <id name="study_burst_progress_bar_title"/>
    <id name="tappingButtonView"/>
    <id name="tapping_completion_count"/>
    <id name="tapping_completion_description"/>
    <id name="tapping_completion_left_result"/>
    <id name="tapping_completion_right_result"/>
    <id name="tapping_completion_time_label"/>
    <item name="rs2_show_active_ui_step_fragment_layout" type="layout">@layout/mpower2_active_step</item>
    <item name="rs2_show_completion_step_fragment_layout" type="layout">@layout/mpower2_completion_step</item>
    <item name="rs2_show_countdown_step_fragment_layout" type="layout">@layout/mpower2_countdown_step</item>
    <string name="app_name">Motor Control Module</string>
    <string name="app_version_label">"%1$s version %2$s, build %3$d"</string>
    <string name="tap_count_label">Tap Count</string>
    <string name="tapping_completion_left_description">LEFT TAP COUNT</string>
    <string name="tapping_completion_right_description">RIGHT TAP COUNT</string>
    <string name="tapping_completion_time_label_text">In 30 seconds</string>
    <string name="tapping_continue">Next</string>
    <string name="tapping_continue_with_text">Continue with %@ hand</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MotorControl"/>
    <style name="MotorControl.CancelButton" parent="Widget.ResearchStack.StepHeader.CancelButton">
        <item name="android:layout_marginTop">@dimen/margin_xlarge</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
        <item name="android:background">@drawable/rs2_cancel_icon</item>
    </style>
    <style name="Widget.ResearchStack.NavigationActionBar.Countdown" parent="Widget.ResearchStack.NavigationActionBar.Active">
        <item name="isSkipHidden">true</item>
    </style>
    <style name="Widget.ResearchStack.NavigationActionBar.TappingActive" parent="Widget.ResearchStack.NavigationActionBar.Active">
        <item name="isSkipHidden">true</item>
    </style>
    <style name="Widget.ResearchStack.StepHeader.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

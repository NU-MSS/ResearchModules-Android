    <string name="back">Back</string>
    <string name="next">Next</string>
    <style name="BlueberryTheme" parent="Sage.BaseTheme">
        <item name="colorPrimary">@color/blueberry400</item>
        <item name="colorPrimaryDark">@color/blueberry500</item>
        <item name="colorAccent">@color/apple200</item>
        <item name="colorSecondary">@color/fern200</item>
        <item name="colorControlHighlight">@color/blueberry400_35</item>
    </style>
    <style name="Button.CloseButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="icon">@drawable/ic_close_black_30dp</item>
    </style>
    <style name="Button.ColoredButton" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="RoyalTheme" parent="Sage.BaseTheme">
        <item name="colorPrimary">@color/royal300</item>
        <item name="colorPrimaryDark">@color/royal400</item>
        <item name="colorAccent">@color/turquoise300</item>
        <item name="colorSecondary">@color/butterscotch400</item>
        <item name="colorControlHighlight">@color/royal100_25</item>
    </style>
    <style name="Sage.BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Sage.SmallComponent</item>
    </style>
    <style name="ShapeAppearance.Sage.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
